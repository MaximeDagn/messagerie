<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Accueil - WinaChat</title>
    <!-- Bootstrap core CSS-->
    <link type="text/css" href="bootstrap.css" rel="stylesheet">
    <link type="text/css" href="style.css" rel="stylesheet">
    <link type="text/css" href="admin.css" rel="stylesheet">
  </head>

  <body class="bodyadmin">
    <!-- Navigation-->
      <nav class="navbar navbar-expand-lg navbar-light bg-dark text-white">
        <a class="navbar-brand text-white" href="accueil">Winachat</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" id="navLeft" href="#"><span class="fontawesome-align-justify"></span></a>
            </li>
          </ul>
          <div class="form-inline">
            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span class="fontawesome-align-justify"></span>
            </a>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <a class="dropdown-item" href="accueil">Accueil</a>
              <a class="dropdown-item" href="profil">Mon profil</a>
              <a class="dropdown-item" href="#" id="disconnection">Déconnexion</a>
            </div>
            <span> <%= name %></span>
          </div>
        </div>
      </nav>
<!-- Partie t'chat -->
  <!-- Affichage de conversation en attente -->
    <div class="container-fluid">
        <div class="row grisfondb">
            <div class="col-sm-2 backGrey" id="leftmenuadmin">
              <ul>
                <li><a href="accueil">Accueil</a></li>
                <li><a href="interface">Interface de modération</a></li>
                <% if(grade === 'administrateur') { %>
                <li><a href="administration">Administration</a></li>
                <% } %>
              </ul>
            </div>
            <div class="col-sm-2 backGrey">
            </div>
            <!-- Affichage du tchat et conversation en cours -->
            <div class="col-sm-10 backGrey p-2">
              <button class="btn btn-secondary m-2" id='addAdmin'>Créer un compte</button>
                <table class='table w-75'>
                  <thead>
                    <tr>
                      <th scope='col'>Identifiant</th>
                      <th scope='col'>Email</th>
                      <th scope='col'>Nom</th>
                      <th scope='col'>Grade</th>
                      <th scope='col'>Avatar</th>
                      <th scope='col'>Modifier</th>
                      <th scope='col'>Supprimer</th>
                    </tr>
                  </thead>
                  <tbody id="listadmin">
                  </tbody>
                </table>
                <!--  fenêtre modal -->
                  <form class="w-25 m-auto bg-light p-2 disparait" id="loginadmin">
                    <div class="form-group">
                      <label>Adresse Email</label>
                      <input type="email" class="form-control" name="email" aria-describedby="emailHelp" placeholder="Entrez un Email">
                    </div>
                    <div class="form-group">
                      <label>Mot de passe</label>
                      <input type="password" class="form-control" name="password1ins" placeholder="Entrez un password">
                    </div>
                    <div class="form-group">
                      <label>Mot de passe</label>
                      <input type="password" class="form-control" name="password2ins" placeholder="Re-tapez un password">
                    </div>
                    <div class="form-group">
                      <label>Prénom</label>
                      <input type="text" class="form-control" name="prenom" placeholder="Entrez un prénom">
                    </div>
                    <div class="form-group">
                      <label for="exampleFormControlSelect1">Rôle</label>
                      <select class="form-control" id='selectRole'>
                        <option value='operateur'>Opérateur</option>
                        <option value='administrateur'>Administrateur</option>
                      </select>
                    </div>
                    <button type="button" class="btn btn-primary" id="btnRegister">Inscription</button>
                  </form>
                  <form class='w-25 m-auto bg-light p-2 disparait' id='editAdminForm'></form>
        	  </div>
    	</div>
  </div>
<!-- Fin partie t'chat -->
    <script type="text/javascript" src="jquery-3.3.1.js"></script>
    <script type="text/javascript" src="bootstrap.js"></script>
    <script src="socket.io-client/dist/socket.io.js"></script>
    <script src="chart.js/dist/Chart.js"></script>
    <script type="text/javascript" src="administration.js"></script>
    <script type="text/javascript" src="scriptadmin.js"></script>
</body>
</html>